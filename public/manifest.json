{
  "name": "osu! mapper audit",
  "description": "Allows you to quickly estimate a users' mapping proficiency.",
  "version": "1.0",
  "manifest_version": 3,
  
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "identity",
    "action"
  ],
  
  "host_permissions": [
    "https://osu.ppy.sh/*"
  ],

  "action": {
    "default_popup": "popup.html"
  },
  
  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": [
        "https://osu.ppy.sh/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ]
}
